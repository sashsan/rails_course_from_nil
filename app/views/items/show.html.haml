%h2{ style: "color: #B00100; margin: 0 auto"} show item
%br

%h4= @item.name.upcase

%ul
  %li Price:       #{@item.price} $
  %li Weight:      #{@item.weight}
  %li Description: #{urls_to_content(@item.description)}

%br

= button_to "edit #{@item.name}",   edit_item_path, method: :get
= button_to "delete #{@item.name}", item_path(@item), method: :delete
= button_to "index", items_path, method: :get
%br

= render partial: 'shared/email'